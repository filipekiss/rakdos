{
    "name": "rakdos",
    "version": "1.2.0",
    "description": "",
    "main": "index.js",
    "dependencies": {
        "dotenv": "^6.2.0",
        "express": "^4.17.1",
        "node-fetch": "^2.3.0",
        "query-string": "^6.8.1",
        "telegraf": "^3.26.0"
    },
    "devDependencies": {
        "@babel/cli": "7.1.0",
        "@babel/core": "7.4.5",
        "@babel/node": "7.4.5",
        "@babel/plugin-proposal-class-properties": "7.1.0",
        "@babel/plugin-proposal-object-rest-spread": "7.4.4",
        "@babel/preset-env": "7.6.3",
        "@babel/preset-typescript": "7.1.0",
        "@babel/register": "7.4.4",
        "@types/express": "4.16.0",
        "@types/node": "12.0.12",
        "@types/node-fetch": "2.1.2",
        "babel-eslint": "9.0.0",
        "babel-plugin-module-resolver": "3.2.0",
        "babel-plugin-syntax-trailing-function-commas": "6.22.0",
        "eslint": "5.16.0",
        "eslint-config-prettier": "4.3.0",
        "eslint-import-resolver-babel-module": "4.0.0",
        "eslint-plugin-import": "2.18.0",
        "husky": "1.0.0",
        "lint-staged": "8.2.0",
        "nodemon": "1.18.9",
        "prettier": "1.14.3",
        "pretty-quick": "1.11.0",
        "telegram-typings": "4.0.0-beta",
        "ts-node": "7.0.1",
        "typescript": "3.5.2"
    },
    "resolutions": {
        "event-stream": "4.0.1"
    },
    "scripts": {
        "test": "echo \"Error: no test specified\" && exit 1",
        "check-types": "tsc",
        "check-types:watch": "tsc --watch",
        "build": "babel src --out-dir ./build --extensions '.ts'",
        "dev": "nodemon src/index.ts --exec \"babel-node --extensions '.ts' --require  ./node_modules/dotenv/config\"",
        "start": "node --require dotenv/config build/index.js",
        "deploy": "tsc && now --dotenv=.env.production"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.ts": [
            "pretty-quick --staged"
        ],
        "*.{json,md}": [
            "pretty-quick --staged"
        ]
    },
    "babel": {
        "presets": [
            [
                "@babel/env",
                {
                    "targets": {
                        "node": "8"
                    }
                }
            ],
            "@babel/typescript"
        ],
        "plugins": [
            [
                "module-resolver",
                {
                    "extensions": [
                        ".ts"
                    ],
                    "stripExtensions": [
                        ".ts"
                    ],
                    "root": [
                        "./src"
                    ],
                    "alias": {
                        "static": "./static"
                    }
                }
            ],
            [
                "@babel/proposal-object-rest-spread"
            ],
            [
                "@babel/proposal-class-properties"
            ]
        ]
    },
    "engines": {
        "node": ">=10.0"
    },
    "eslint": {
        "extends": [
            "prettier"
        ],
        "settings": {
            "import/resolver": {
                "babel-module": {}
            }
        }
    },
    "prettier": {
        "useTabs": false,
        "tabWidth": 4,
        "semi": true,
        "singleQuote": true,
        "trailingComma": "all",
        "bracketSpacing": false,
        "jsxBracketSameLine": false,
        "arrowParens": "always",
        "proseWrap": "always"
    },
    "author": "Filipe Kiss <hello@filipekiss.com.br>",
    "license": "MIT"
}
