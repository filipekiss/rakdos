{
    "compilerOptions": {
        "target": "es5",
        "moduleResolution": "node",
        "allowJs": true,
        "noEmit": true,
        "strict": true,
        "esModuleInterop": true,
        "noImplicitAny": false,
        "baseUrl": ".",
        "paths": {
            "*": ["*", "src/*"],
            "static": ["static/*"]
        },
        "lib": ["es2017", "dom"],
        "typeRoots": [
            "./typings",
            "./node_modules/@types",
            "./node_modules/telegram-typings",
            "./node_modules/telegraf/typings"
        ]
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}
